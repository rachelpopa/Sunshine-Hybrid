<mvc:View
    controllerName="sap.ui.sunshine.wt.controller.Forecasts"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns="sap.m">
    <Page
        showHeader="false">
        <List
            items="{
                    path : '/list', 
                    sorter : [{
                        path : 'dt'
                    }],
                    group : true
                }">
                
            <headerToolbar class="forecastHeader">
                <Toolbar>
                    <Image src="images/ic_logo.png" />
                </Toolbar>
            </headerToolbar>
            <CustomListItem
                id="forecastToday"
                type="Navigation">
                <HBox>
                    <VBox>
                        <Text text="{day}"/>
                        <Text text="{temp/max}"/>
                        <Text text="{temp/min}"/>
                    </VBox>
                    <VBox>
                        <Image 
                            src="images/{image}"
                        />
                        <Text text="{weather/0/main}"/>
                    </VBox>
                </HBox>
            </CustomListItem>
            <items>
                <CustomListItem
                    type="Navigation"
                    press="onPress">
                    <HBox>
                        <Image src="images/{path : 'weather/0/id', formatter : '.formatter.getIcon'}" class="listIcon"/>
                        <VBox class="listGroup">
                            <Text text="{path : 'dt', formatter : '.formatter.getDay'}" class="listDay"/>
                            <Text text="{weather/0/main}" class="listDesc"/>
                        </VBox>
                        <VBox class="listGroup">
                            <Text text="{path : 'temp/max', formatter : '.formatter.getFormattedTemperature'}" class="listMax"/>
                            <Text text="{path : 'temp/min', formatter : '.formatter.getFormattedTemperature'}" class="listMin"/>
                        </VBox>
                    </HBox>
                </CustomListItem>
            </items>
        </List>
    </Page>
</mvc:View>

