<mvc:View
	height="100%"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns="sap.m">
    <VBox>
        <Text text="{day}"/>
        <Text text="{date}"/>
        <HBox>
            <VBox>
                <Text text="{temp/max}"/>
                <Text text="{temp/min}"/>
            </VBox>
            <VBox>
                <Image 
                        src="images/{image}"
                    />
                <Text text="{weather/0/main}"/>
            </VBox>
        </HBox>
        <Text text="Humidity: {humidity}"/>
        <Text text="Wind: {speed}"/>
        <Text text="Pressure: {pressure}"/>
    </VBox>
</mvc:View>