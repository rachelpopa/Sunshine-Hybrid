<mvc:View
	height="100%"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns="sap.m"
    class="detailsBackground">
    <VBox class="detailsContent">
        <Text text="{day}" class="detailsDay"/>
        <Text text="{date}" class="detailsDate"/>
        <HBox>
            <VBox class = "detailsTemperature">
                <Text text="{temp/max}" class = "detailsMax"/>
                <Text text="{temp/min}" class = "detailsMin"/>
            </VBox>
            <VBox class = "detailsWeatherStatus">
                <Image src="images/{image}" class="detailsImage"/>
                <Text text="{weather/0/main}" class="detailsDesc"/>
            </VBox>
        </HBox>
        <Text text="Humidity: {humidity}" class="detailsHumidity"/>
        <Text text="Wind: {fullwind}" class="detailsWind"/>
        <Text text="Pressure: {pressure}" class="detailsPressure"/>
    </VBox>
</mvc:View>