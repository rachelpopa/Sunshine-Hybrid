<mvc:View
    controllerName="sap.ui.sunshine.wt.List"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns="sap.m">
	<List
        items="{
                path : '/list', 
                sorter : [{
                    path : 'dt'
                }],
                group : true
            }">
            
        <headerToolbar>
			<Toolbar>
                <Image src="images/ic_logo.png" />
			</Toolbar>
		</headerToolbar>
		<CustomListItem
            id="forecastToday"
            type="Navigation">
            <HBox>
                <VBox>
                    <Text text="{day}"/>
                    <Text text="{temp/max}"/>
                    <Text text="{temp/min}"/>
                </VBox>
                <VBox>
                    <Image 
                        src="images/art_clear.png"
                    />
                    <Text text="{weather/0/main}"/>
                </VBox>
			</HBox>
        </CustomListItem>
        <items>
            <CustomListItem
                type="Navigation"
                press="onPress">
                <HBox>
                    <Image 
                        src="images/ic_launcher.png"
                    />
                    <VBox>
                        <Text text="{day}"/>
                        <Text text="{weather/0/main}"/>
                    </VBox>
                    <VBox>
                        <Text text="{temp/max}"/>
                        <Text text="{temp/min}"/>
                    </VBox>
                </HBox>
            </CustomListItem>
        </items>
	</List>
</mvc:View>

