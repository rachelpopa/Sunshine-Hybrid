<mvc:View
    controllerName="sap.ui.sunshine.wt.controller.List"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns="sap.m">
	<List
        items="{
                path : '/list', 
                sorter : [{
                    path : 'dt'
                }],
                group : true
            }">
            
        <headerToolbar class="forecastHeader">
			<Toolbar>
                <Image src="images/ic_logo.png" />
			</Toolbar>
		</headerToolbar>
		<CustomListItem
            id="forecastToday"
            type="Navigation">
            <HBox>
                <VBox>
                    <Text text="{day}"/>
                    <Text text="{temp/max}"/>
                    <Text text="{temp/min}"/>
                </VBox>
                <VBox>
                    <Image 
                        src="images/{image}"
                    />
                    <Text text="{weather/0/main}"/>
                </VBox>
			</HBox>
        </CustomListItem>
        <items>
            <CustomListItem
                type="Navigation"
                press="onPress">
                <HBox>
                    <Image src="images/{icon}" class="listIcon"/>
                    <VBox class="listGroup">
                        <Text text="{day}" class="listDay"/>
                        <Text text="{weather/0/main}" class="listDesc"/>
                    </VBox>
                    <VBox class="listGroup">
                        <Text text="{temp/max}" class="listMax"/>
                        <Text text="{temp/min}" class="listMin"/>
                    </VBox>
                </HBox>
            </CustomListItem>
        </items>
	</List>
</mvc:View>

